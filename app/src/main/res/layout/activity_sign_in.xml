<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:gravity="center"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp"
    android:orientation="vertical"
    tools:context=".ui.SignInActivity">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/logo_quiz"/>

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/title_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Muslim Quiz"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:textSize="40dp"
        />

    <TextView
        android:id="@+id/description_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login Untuk Melanjutkan"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_email"
        android:layout_marginTop="35dp"
        android:layout_gravity="left"
        android:layout_marginLeft="5dp"
        android:text="Email"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_email"
        android:hint="Masukan email anda"
        android:textSize="18sp"
        android:inputType="textEmailAddress"
        android:paddingBottom="18dp"
        android:textColor="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_password"
        android:layout_marginTop="5dp"
        android:layout_gravity="left"
        android:layout_marginLeft="5dp"
        android:text="Password"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_password"
        android:hint="Masukan password anda"
        android:textSize="18sp"
        android:paddingBottom="18dp"
        android:inputType="textPassword"
        android:textColor="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tv_forgot_password"
        android:layout_gravity="right"
        android:textSize="18sp"
        android:text="Lupa Password ?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_login"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lanjutkan"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:background="@drawable/rounded_button"/>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/tv_register"
        android:gravity="bottom"
        android:textSize="18sp"
        android:text="Tidak Punya Akun ? Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:layout_marginTop="15dp"
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center|bottom"
        android:visibility="gone" />

</LinearLayout>