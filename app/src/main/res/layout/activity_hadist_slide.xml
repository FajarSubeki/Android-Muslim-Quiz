<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".holder_activity.HadistSlide">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:background="@color/colorCyan"
        android:layout_height="60dp"
        android:minHeight="?actionBarSize">

        <ImageView
            android:id="@+id/leftdifficultyent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="Go back"
            android:src="@drawable/ic_arrow_back_black_24dp" />

        <TextView
            android:id="@+id/textviewdifficultyent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Level Tafsir Hadist"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/montserrat"
            android:textSize="23sp" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:background="@color/colorCyan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/easyent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="EASY"
            android:fontFamily="@font/montserrat"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/mediument"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="MEDIUM"
            android:fontFamily="@font/montserrat"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/hardent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="HARD"
            android:fontFamily="@font/montserrat"
            android:textColor="#ffffff"
            android:textSize="18sp" />

    </LinearLayout>

    <com.example.muslimquiz.holder_activity.SlidingTabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>