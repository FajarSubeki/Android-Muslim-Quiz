<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:orientation="vertical"
    tools:context=".ui.MainGameHadistMedium">

    <RelativeLayout
        android:id="@+id/rela"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:background="@color/colorCyan"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/coinImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_coin" />

        <TextView
            android:id="@+id/coinTextMediumQuran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/coinImage"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text=""
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/triviaQuizTextMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/timeText"
            android:layout_toRightOf="@+id/coinText"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/colorWhite"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/timeTextMediumQuran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="15"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/rela"
        android:id="@+id/red"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/colorCyan">

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="75dp"
            android:layout_marginRight="13dp"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="7dp"
            app:cardElevation="5dp"
            app:contentPadding="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name_employee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/badge_outline"
                    android:fontFamily="@font/montserrat"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Tafsir Hadist"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_question_quran_easy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:text="Isi Kandungan surat Al-Baqarah"
                    android:fontFamily="@font/montserrat"
                    android:textSize="23sp"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:layout_below="@id/tv_question_quran_easy"
                    android:id="@+id/tv_result_text_medium_quran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/montserrat"
                    android:textSize="30sp" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lila3"
        android:padding="16dp"
        android:layout_below="@id/form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <android.support.v7.widget.CardView
            android:id="@+id/card_a"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:onClick="cardA"
            android:layout_marginRight="7dp"
            app:contentPadding="16dp"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/tv_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:fontFamily="@font/montserrat"
                android:textSize="20sp"
                android:layout_gravity="center_vertical|center_horizontal"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_b"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:onClick="cardB"
            app:contentPadding="16dp"
            android:layout_marginLeft="7dp"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/tv_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:fontFamily="@font/montserrat"
                android:textSize="20sp"
                android:layout_gravity="center_vertical|center_horizontal"/>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_below="@id/lila3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <android.support.v7.widget.CardView
            android:id="@+id/card_c"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:onClick="cardC"
            android:layout_marginRight="7dp"
            app:contentPadding="16dp"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/tv_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:fontFamily="@font/montserrat"
                android:textSize="20sp"
                android:layout_gravity="center_vertical|center_horizontal"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_d"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:onClick="cardD"
            app:contentPadding="16dp"
            android:layout_marginLeft="7dp"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/tv_D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:fontFamily="@font/montserrat"
                android:textSize="20sp"
                android:layout_gravity="center_vertical|center_horizontal"/>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</RelativeLayout>